<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.VideoListExample.PlayerView" parent="">
        <item name="bar_height">3dp</item>
        <item name="buffered_color">@color/grey_200</item>
        <item name="played_color">@color/purple_200</item>
        <item name="scrubber_color">@color/purple_200</item>
        <item name="scrubber_dragged_size">16dp</item>
        <item name="scrubber_enabled_size">12dp</item>
    </style>

    <style name="Widget.VideoListExample.PlayerView.List" parent="Widget.VideoListExample.PlayerView">
        <item name="android:minHeight">@dimen/min_height_player_view_list</item>
        <item name="auto_show">false</item>
        <item name="controller_layout_id">@layout/block_player_control_list</item>
        <item name="hide_on_touch">false</item>
        <item name="player_layout_id">@layout/block_player_view_list</item>
        <item name="resize_mode">zoom</item>
        <item name="surface_type">texture_view</item>
        <item name="show_timeout">0</item>
    </style>

    <style name="Widget.VideoListExample.PlayerView.PlayPause" parent="Widget.VideoListExample.PlayerView">
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="auto_show">false</item>
        <item name="controller_layout_id">@layout/block_player_control_play_pause</item>
        <item name="show_timeout">0</item>
    </style>

    <style name="Widget.VideoListExample.PlayerView.Portrait" parent="Widget.VideoListExample.PlayerView">
        <item name="android:background">@color/black</item>
        <item name="android:minHeight">@dimen/min_height_player_view_portrait</item>
        <item name="auto_show">false</item>
        <item name="controller_layout_id">@layout/block_player_control_portrait</item>
        <item name="resize_mode">zoom</item>
    </style>
</resources>