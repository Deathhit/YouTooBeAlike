<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/scene_home_activity"
    tools:ignore="contentDescription">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/container_homeTab"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_playerView"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="?android:attr/windowBackground"
        app:layout_constrainedWidth="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.exoplayer2.ui.StyledPlayerView
        android:id="@+id/playerView"
        style="@style/Widget.VideoListExample.PlayerView.Portrait"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/container_playerView"
        app:layout_constraintEnd_toEndOf="@id/container_playerView"
        app:layout_constraintStart_toStartOf="@id/container_playerView"
        app:layout_constraintTop_toTopOf="@id/container_playerView" />

    <com.google.android.exoplayer2.ui.StyledPlayerControlView
        android:id="@+id/playerControlView_playPause"
        style="@style/Widget.VideoListExample.PlayerView.PlayPause"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/container_playerView"
        app:layout_constraintEnd_toStartOf="@id/button_clear"
        app:layout_constraintStart_toEndOf="@id/playerView"
        app:layout_constraintTop_toTopOf="@id/container_playerView" />

    <Button
        android:id="@+id/button_clear"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/common_clear"
        app:icon="@drawable/ic_clear"
        app:layout_constraintBottom_toBottomOf="@id/container_playerView"
        app:layout_constraintEnd_toEndOf="@id/container_playerView"
        app:layout_constraintTop_toTopOf="@id/container_playerView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_playbackInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_playerView" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />
</androidx.constraintlayout.motion.widget.MotionLayout>