<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <!--Due to historical reasons the start state of the first transition in the file is the initial state.-->
    <Transition
        android:id="@+id/pop"
        motion:constraintSetEnd="@+id/start"
        motion:constraintSetStart="@+id/gone"
        motion:duration="250" >
        <KeyFrameSet>
            <KeyPosition
                motion:curveFit="linear"
                motion:framePosition="0"
                motion:motionTarget="@id/container_playerView"
                motion:percentWidth="1" />

            <KeyPosition
                motion:curveFit="linear"
                motion:framePosition="0"
                motion:motionTarget="@id/playerView"
                motion:percentWidth="1"
                motion:percentX="1" />

            <KeyPosition
                motion:curveFit="linear"
                motion:framePosition="0"
                motion:motionTarget="@id/imageView_thumbnail"
                motion:percentWidth="1"
                motion:percentX="1" />

            <KeyPosition
                motion:curveFit="linear"
                motion:framePosition="0"
                motion:motionTarget="@id/container_trackInfo"
                motion:percentWidth="1"
                motion:percentX="1" />

            <KeyPosition
                motion:curveFit="linear"
                motion:framePosition="0"
                motion:motionTarget="@id/playerControlView_playPause"
                motion:percentWidth="1"
                motion:percentX="1" />

            <KeyPosition
                motion:curveFit="linear"
                motion:framePosition="0"
                motion:motionTarget="@id/button_clear"
                motion:percentWidth="1"
                motion:percentX="1" />
        </KeyFrameSet>
    </Transition>

    <Transition
        android:id="@+id/dragVertically"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="250"
        motion:motionInterpolator="linear"
        motion:transitionFlags="onInterceptTouchReturnSwipe">
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@+id/container_playerView"
            motion:touchAnchorSide="bottom"
            motion:touchRegionId="@+id/container_playerView" />

        <KeyFrameSet>
            <KeyPosition
                motion:curveFit="linear"
                motion:framePosition="90"
                motion:motionTarget="@id/container_playerView"
                motion:percentWidth="0" />

            <KeyPosition
                motion:curveFit="linear"
                motion:framePosition="90"
                motion:motionTarget="@id/playerView"
                motion:percentWidth="0"
                motion:percentX="0" />

            <KeyPosition
                motion:curveFit="linear"
                motion:framePosition="90"
                motion:motionTarget="@id/imageView_thumbnail"
                motion:percentWidth="0"
                motion:percentX="0" />

            <KeyPosition
                motion:curveFit="linear"
                motion:framePosition="90"
                motion:motionTarget="@id/container_trackInfo"
                motion:percentWidth="0"
                motion:percentX="0" />

            <KeyPosition
                motion:curveFit="linear"
                motion:framePosition="90"
                motion:motionTarget="@id/playerControlView_playPause"
                motion:percentWidth="0"
                motion:percentX="0" />

            <KeyPosition
                motion:curveFit="linear"
                motion:framePosition="90"
                motion:motionTarget="@id/button_clear"
                motion:percentWidth="0"
                motion:percentX="0" />
        </KeyFrameSet>
    </Transition>

    <Transition
        android:id="@+id/hide"
        motion:constraintSetEnd="@+id/gone"
        motion:constraintSetStart="@+id/end"
        motion:duration="250" />

    <ConstraintSet android:id="@id/gone">
        <Constraint
            android:id="@id/container_playerView"
            android:layout_width="0dp"
            android:layout_height="@dimen/min_height_player_view_portrait"
            motion:layout_constraintBottom_toBottomOf="@id/bottomNavigationView"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@id/bottomNavigationView" />

        <Constraint
            android:id="@id/playerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@id/container_playerView"
            motion:layout_constraintDimensionRatio="H,1:2.5"
            motion:layout_constraintStart_toStartOf="@id/container_playerView"
            motion:layout_constraintTop_toTopOf="@id/container_playerView" />

        <Constraint android:id="@id/imageView_thumbnail">
            <PropertySet app:visibilityMode="ignore" />
        </Constraint>

        <Constraint
            android:id="@id/container_trackInfo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@id/container_playerView"
            motion:layout_constraintEnd_toStartOf="@id/playerControlView_playPause"
            motion:layout_constraintStart_toEndOf="@id/playerView"
            motion:layout_constraintTop_toTopOf="@id/container_playerView" />

        <Constraint
            android:id="@id/playerControlView_playPause"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@id/container_playerView"
            motion:layout_constraintEnd_toStartOf="@id/button_clear"
            motion:layout_constraintTop_toTopOf="@id/container_playerView" />

        <Constraint
            android:id="@id/button_clear"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@id/container_playerView"
            motion:layout_constraintEnd_toEndOf="@id/container_playerView"
            motion:layout_constraintTop_toTopOf="@id/container_playerView" />

        <Constraint
            android:id="@id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@id/bottomNavigationView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@id/end">
        <Constraint
            android:id="@id/container_playerView"
            android:layout_width="0dp"
            android:layout_height="@dimen/min_height_player_view_portrait"
            motion:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="1"
            motion:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@id/playerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@id/container_playerView"
            motion:layout_constraintDimensionRatio="H,1:2.5"
            motion:layout_constraintStart_toStartOf="@id/container_playerView"
            motion:layout_constraintTop_toTopOf="@id/container_playerView" />

        <Constraint android:id="@id/imageView_thumbnail">
            <PropertySet app:visibilityMode="ignore" />
        </Constraint>

        <Constraint
            android:id="@id/container_trackInfo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@id/container_playerView"
            motion:layout_constraintEnd_toStartOf="@id/playerControlView_playPause"
            motion:layout_constraintStart_toEndOf="@id/playerView"
            motion:layout_constraintTop_toTopOf="@id/container_playerView" />

        <Constraint
            android:id="@id/playerControlView_playPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@id/container_playerView"
            motion:layout_constraintEnd_toStartOf="@id/button_clear"
            motion:layout_constraintTop_toTopOf="@id/container_playerView" />

        <Constraint
            android:id="@id/button_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@id/container_playerView"
            motion:layout_constraintEnd_toEndOf="@id/container_playerView"
            motion:layout_constraintTop_toTopOf="@id/container_playerView" />

        <Constraint
            android:id="@id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@id/bottomNavigationView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@id/start">
        <Constraint
            android:id="@id/container_playerView"
            android:layout_width="0dp"
            android:layout_height="@dimen/min_height_player_view_list"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/playerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@id/container_playerView"
            motion:layout_constraintEnd_toEndOf="@id/container_playerView"
            motion:layout_constraintStart_toStartOf="@id/container_playerView"
            motion:layout_constraintTop_toTopOf="@id/container_playerView" />

        <Constraint android:id="@id/imageView_thumbnail">
            <PropertySet app:visibilityMode="ignore" />
        </Constraint>

        <Constraint
            android:id="@id/container_trackInfo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@id/container_playerView"
            motion:layout_constraintEnd_toStartOf="@id/playerControlView_playPause"
            motion:layout_constraintStart_toEndOf="@id/playerView"
            motion:layout_constraintTop_toTopOf="@id/container_playerView" />

        <Constraint
            android:id="@id/playerControlView_playPause"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@id/container_playerView"
            motion:layout_constraintEnd_toStartOf="@id/button_clear"
            motion:layout_constraintTop_toTopOf="@id/container_playerView" />

        <Constraint
            android:id="@id/button_clear"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@id/container_playerView"
            motion:layout_constraintEnd_toEndOf="@id/container_playerView"
            motion:layout_constraintTop_toTopOf="@id/container_playerView" />

        <Constraint
            android:id="@id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/container_playerView" />

        <Constraint
            android:id="@id/bottomNavigationView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintTop_toBottomOf="parent" />
    </ConstraintSet>
</MotionScene>